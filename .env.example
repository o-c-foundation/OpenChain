# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/openchain

# Blockchain Configuration
MINING_DIFFICULTY=4
MINING_REWARD=50
BLOCK_TIME=10000

# Security
JWT_SECRET=your-jwt-secret-key
API_RATE_LIMIT=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# Network Simulation
SIMULATION_ENABLED=true
DEFAULT_NETWORK_LATENCY=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/openchain.log

# Optional Features
ENABLE_METRICS=true
ENABLE_ALERTS=true 