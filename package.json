{
  "name": "openchain",
  "version": "1.0.0",
  "description": "OpenChain - Educational Blockchain Simulation",
  "main": "src/index.ts",
  "scripts": {
    "start": "NODE_ENV=production ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "deploy": "bash deploy.sh",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "aws:init": "aws elasticbeanstalk init",
    "aws:deploy": "npm run build && npm run deploy"
  },
  "dependencies": {
    "aws-sdk": "^2.1450.0",
    "bs58": "^5.0.0",
    "chart.js": "^4.4.0",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "elliptic": "^6.5.4",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.7",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
} 